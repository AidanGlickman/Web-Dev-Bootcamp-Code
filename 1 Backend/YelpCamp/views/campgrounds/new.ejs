<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="groundName">Create a New Campground</h1>
		<div class="formContain">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" min="0.01" step="0.01" placeholder="price" name="price">
				</div>
				<div class="form-group">
					<textarea class="form-control descBox" name="description" rows="5" placeholder="description"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>