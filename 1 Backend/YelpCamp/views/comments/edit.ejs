<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 class="groundName">Edit your comment on <%= campground.name %></h1>
		<div class="formContain">
			<form action="/campgrounds/<%=campground._id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control descBox" name="comment[text]" rows="5" placeholder="comment">
						<%= comment.text %>
					</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>